{
    "manifest": {
        "displayName": "VCR",
        "invocationName": "VCR",
        "category": "PRODUCTIVITY"
    },
    "actions": [
        {
            "name": "com.acme.actions.start_game",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.acme.actions.start_game",
                "parameters": [
                    {
                        "name": "game",
                        "type": "GameType"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Start a new $GameType:game Game"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Ok. Starting a new $game.raw game."
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.acme.commands.start_game",
                                    "params": {
                                        "game": "$game"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.acme.actions.set_letter",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.acme.actions.set_letter",
                "parameters": [
                    {
                        "name": "XorO",
                        "type": "Letter"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Set my letter to $Letter:XorO"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Ok. setting letter to $XorO.raw . X will go first."
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.acme.commands.set_letter",
                                    "params": {
                                        "letter": "$XorO"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.acme.actions.choose_position",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.acme.actions.choose_position",
                "parameters": [
                    {
                        "name": "pos",
                        "type": "Position"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Move to (position)? $Position:pos"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Ok, Placing piece at position $pos.raw ."
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.acme.actions.choose_position",
                                    "params": {
                                        "position": "$pos"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.acme.actions.guess_object",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.acme.actions.guess_object",
                "parameters": [
                    {
                        "name": "object",
                        "type":"SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Is it (a)? $SchemaOrg_Text:object",
                        "It is (a)? $SchemaOrg_Text:object",
                        "The object is (a)? $SchemaOrg_Text:object"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Ok."
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.acme.commands.guess_object",
                                    "params": {
                                        "object": "$object"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ],
